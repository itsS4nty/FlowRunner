{
    "name": "@itss4nty/flowrunner",
    "version": "1.0.0",
    "description": "A powerful task runner with dependency management, retry mechanisms, and real-time dashboard monitoring",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "start:dev": "nodemon src/index.ts",
        "start": "ts-node src/index.ts",
        "build": "npm run build:dashboard && tsc && tsc-alias",
        "build:dashboard": "cd src/dashboard && npm run build && mkdir -p ../../dist/dashboard && cp -r dist/* ../../dist/dashboard/",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "prettier": "prettier . --check",
        "prettier:fix": "prettier . --write",
        "test": "jest --detectOpenHandles",
        "test:watch": "jest --watch --detectOpenHandles",
        "test:coverage": "jest --coverage --detectOpenHandles",
        "test:ci": "jest --ci --coverage --watchAll=false --detectOpenHandles",
        "start:dashboard": "npm start --workspace dashboard",
        "install:dashboard": "npm install --workspace dashboard",
        "prepublishOnly": "npm run test && npm run build"
    },
    "dependencies": {
        "@koa/router": "^12.0.1",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "koa": "^2.15.2",
        "koa-basic-auth": "^4.0.0",
        "koa-bodyparser": "^4.4.1",
        "koa-jwt": "^4.0.4",
        "koa-logger": "^3.2.1",
        "koa-mount": "^4.0.0",
        "koa-router": "^12.0.1",
        "koa-static": "^5.0.0",
        "koa2-cors": "^2.0.6",
        "socket.io": "^4.8.1",
        "uuid": "^11.1.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/koa": "^2.15.0",
        "@types/koa-basic-auth": "^2.0.6",
        "@types/koa-bodyparser": "^4.3.12",
        "@types/koa-logger": "^3.1.5",
        "@types/koa-mount": "^4.0.5",
        "@types/koa-router": "^7.4.8",
        "@types/koa-static": "^4.0.4",
        "@types/koa2-cors": "^2.0.5",
        "@types/node": "^20.11.30",
        "@typescript-eslint/eslint-plugin": "^7.3.1",
        "@typescript-eslint/parser": "^7.3.1",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.0",
        "eslint-plugin-import-newlines": "^1.4.0",
        "glob": "^10.3.12",
        "jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.8",
        "typescript": "^5.4.3"
    },
    "keywords": [
        "task-runner",
        "workflow",
        "job-queue",
        "scheduler",
        "dependency-management",
        "retry-logic",
        "dashboard",
        "monitoring",
        "typescript",
        "concurrency",
        "flowrunner"
    ],
    "author": "Your Name <your.email@example.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/flowrunner.git"
    },
    "bugs": {
        "url": "https://github.com/yourusername/flowrunner/issues"
    },
    "homepage": "https://github.com/yourusername/flowrunner#readme",
    "workspaces": [
        "src/*"
    ]
}
